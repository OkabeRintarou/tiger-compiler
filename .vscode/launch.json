{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug tigercc",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tigercc",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set disassembly flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Load Python libstdc++ printers for STL types",
                    "text": "python import sys; sys.path.insert(0, '/usr/share/gcc/python'); from libstdcxx.v6.printers import register_libstdcxx_printers; register_libstdcxx_printers(None)",
                    "ignoreFailures": true
                }
            ],
            "additionalSOLibSearchPath": "/usr/lib/x86_64-linux-gnu",
            "preLaunchTask": "Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug tiger_tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tiger_tests",
